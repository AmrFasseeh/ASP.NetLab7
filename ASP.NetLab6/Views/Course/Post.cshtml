@model Course
@{
    ViewBag.title = "Course Edit";
}
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/Course/Post/@Model.CourseId" method="post">
                <div class="form-group">
                    @Html.LabelFor(c => c.CourseName, new { @for = "CourseName" })
                    @Html.TextBoxFor(c => c.CourseName, new { @class = "form-control", value = Model.CourseName })
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Duration, new { @for = "Duration" })
                    @Html.TextBoxFor(c => c.Duration, new { @class = "form-control", value = Model.Duration })
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
