@model Student
@{
    ViewBag.title = "Edit Student " + Model.Name;
}
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/Student/Post/@Model.id" method="post">
                    @Html.HiddenFor(s => s.id)
                <div class="form-group">
                    @Html.LabelFor(s => s.Name, new { @for = "Name" })
                    @Html.TextBoxFor(s => s.Name, new { @class = "form-control", value = Model.Name })
                    @Html.ValidationMessageFor(s => s.Name)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.Age, new { @for = "Age" })
                    @Html.TextBoxFor(s => s.Age, new { @class = "form-control", value = Model.Age })
                    @Html.ValidationMessageFor(s => s.Age)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.Email, new { @for = "Email" })
                    @Html.TextBoxFor(s => s.Email, new { @class = "form-control", value = Model.Email })
                    @Html.ValidationMessageFor(s => s.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.UserName, new { @for = "UserName" })
                    @Html.TextBoxFor(s => s.UserName, new { @class = "form-control", value = Model.UserName })
                    @Html.ValidationMessageFor(s => s.UserName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.Password, new { @for = "Password" })
                    @Html.PasswordFor(s => s.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(s => s.Password)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.CPassword, new { @for = "CPassword" })
                    @Html.PasswordFor(s => s.CPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(s => s.CPassword)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.Department.DeptId, new { @for = "DeptId" })
                    @Html.DropDownListFor(s => s.DeptId, ViewBag.depts as SelectList, new { @class = "custom-select custom-select-md mb-3" })
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}